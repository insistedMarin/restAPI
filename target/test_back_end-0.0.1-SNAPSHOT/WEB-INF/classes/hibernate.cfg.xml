    <mapping class="com.example.test_back_end.Model.Inventaire"/>
    <mapping class="com.example.test_back_end.Model.Magasin"/>
    <mapping class="com.example.test_back_end.Model.Materiel"/>
    <!-- <property name="connection.username"/> -->
